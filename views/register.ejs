<%- include ("partials/header") %>

<!-- navbar -->
<%- include ("partials/noneusernav") %>
<!-- /navbar -->

<div class="container register-container">
    <h1 class="text-center">Register With Us</h1>
    <hr>
    <!-- google and facebook -->
    <div class="card card-body social-card">
        <a class="btn btn-social btn-facebook btn-block text-light" href="/auth/facebook" role="button">
            <i class="fab fa-facebook"></i>
            Sign Up with Facebook
        </a>
    </div>
    <!-- google and facebook -->

    <h3 class="text-center">OR</h3>

    <div class="row">
        <form action="/register" method="post" class="register-form">
            <div class="col-lg-10 col-md-10">
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="username">
                </div>
            </div>
            <div class="col-lg-10 col-md-10">
                <div class="form-group">
                    <input class="form-control" type="email" name="email" placeholder="Email">
                </div>
            </div>
            <div class="col-lg-10 col-md-10">
                <div class="form-group">
                    <input class="form-control" name="phoneno" type="tel" pattern="^\d{10}$" placeholder="Phone Number">
                </div>
            </div>
            <div class="col-lg-10 col-md-10">
                <div class="form-group">
                    <input class="form-control form-control-md" name="password" type="password" placeholder="password">
                </div>
            </div>

            <button type="submit" class="btn btn-success" style="margin-top: 10px;">Register</button>

            <p style="padding-top: 10px;">Already Have An Account <a class="text-info" href="/login">Login</a></p>

        </form>
    </div>
</div>

<%- include ("partials/footer") %>